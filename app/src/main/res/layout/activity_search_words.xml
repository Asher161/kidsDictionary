<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    android:background="#e0e0e0"
    tools:context=".SearchWords">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundedbutton"
            android:padding="6dp"
            android:text="Grade One"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:id="@+id/grade_one_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundedbutton"
            android:padding="6dp"
            android:text="Grade two"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:id="@+id/grade_two_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundedbutton"
            android:padding="6dp"
            android:text="Grade three"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:id="@+id/grade_three_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundedbutton"
            android:padding="6dp"
            android:text="Grade four"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:id="@+id/grade_four_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundedbutton"
            android:padding="6dp"
            android:text="Grade five"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:id="@+id/grade_five_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundedbutton"
            android:padding="6dp"
            android:text="Grade six"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:id="@+id/grade_six_btn"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/roundedbutton"
            android:padding="6dp"
            android:text="Grade seven"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30dp"
            android:id="@+id/grade_seven_btn"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>